# Core integrations
GEMINI_API_KEY=replace_with_gemini_key
GEMINI_MODEL=gemini-3-flash-preview
SIGNAL_PHONE_NUMBER=+41790000000

# API security and network
API_AUTH_TOKEN=replace_with_long_random_token
API_BIND_ADDR=127.0.0.1:3001
CORS_ALLOWED_ORIGINS=http://localhost:3000

# API abuse protection
CHAT_RATE_LIMIT_PER_MINUTE=30
GENERATE_RATE_LIMIT_PER_HOUR=6

# Optional debug logging (unset in production)
# FITNESS_DEBUG_PROMPT=1

# Dashboard -> API auth (used by Next.js proxy)
FITNESS_API_TOKEN=replace_with_same_value_as_api_auth_token
FITNESS_API_BASE_URL=http://fitness-api:3001

# Optional dashboard basic auth for /settings and /api/profiles
# If DASHBOARD_ADMIN_PASSWORD is unset, it falls back to FITNESS_API_TOKEN / API_AUTH_TOKEN.
# DASHBOARD_ADMIN_USERNAME=admin
# DASHBOARD_ADMIN_PASSWORD=replace_with_strong_password
